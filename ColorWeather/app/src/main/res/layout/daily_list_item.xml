<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dayNameDayListItem"
        android:layout_width="match_parent"
        style="@style/mainFont" android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Today" />

    <TextView
        android:id="@+id/weatherDescripcionDayListItem"
        android:layout_width="match_parent"
        style="@style/mainFont" android:textSize="18dp"
        android:layout_height="wrap_content"
        android:text="Descripcion" />

    <TextView
        android:id="@+id/rainProbailityDayListItem"
        android:layout_width="match_parent"
        style="@style/mainFont" android:textSize="18dp"
        android:layout_height="wrap_content"
        android:text="Probability" />
</LinearLayout>